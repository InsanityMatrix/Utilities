<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChemistryTools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="70dp"
            android:text="@string/effusion_deffusion_ncalculator"
            android:background="@drawable/dark_cyan_background"
            android:textColor="#ffffffff"
            android:layout_marginEnd="5dp"
            android:onClick="startEffDeffCalculator"
            />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="Element Lookup"
            android:background="@drawable/dark_cyan_background"
            android:textColor="#ffffffff"
            android:layout_marginEnd="5dp"
            android:onClick="startElementLookup"
            />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>