<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Weather"
    tools:showIn="@layout/activity_weather">
    <LinearLayout
        android:id="@+id/current_weather_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/dark_cyan_background_nc"
        >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="79.25"
                android:layout_height="match_parent"
                android:text="Current Temperature:"
                android:textColor="#ffffffff"
                android:gravity="center"
                android:textSize="20sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:id="@+id/currentTemp"
                android:textColor="#ffffffff"
                android:gravity="center"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/current_weather_layout"
        android:id="@+id/vis_hum_layout"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/dark_cyan_background_nc"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:text="Visibility: 10"
            android:id="@+id/visibility"
            android:background="@drawable/white_border"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:textSize="18sp"
            android:text="Humidity: 0%"
            android:id="@+id/humidity"
            android:background="@drawable/white_border"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/highlows"
        android:weightSum="2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/vis_hum_layout"
        android:orientation="vertical"
        android:background="@drawable/dark_cyan_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="79.25"
                android:layout_height="match_parent"
                android:text="Today\'s High:"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:id="@+id/todays_highTemp"
                android:textColor="#ffffffff"
                android:gravity="center"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="100">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="79.25"
                android:layout_height="match_parent"
                android:text="Today\'s Low:"
                android:textColor="#ffffffff"
                android:textSize="20sp"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".75"
                android:layout_height="match_parent"
                android:background="@drawable/white_border"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="20"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:id="@+id/todays_lowTemp"
                android:textColor="#ffffffff"
                android:gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/precip_layout"
        android:weightSum="2"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/highlows"
        android:orientation="vertical"
        android:background="@drawable/dark_cyan_background"
        >
        <TextView
            android:id="@+id/precipitation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="#ffffffff"
            android:text="Currently: 0% chance of Rain"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/forecast_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:weightSum="4"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@id/precip_layout"
        android:background="@drawable/black_border"
        >
        <LinearLayout
            android:background="@drawable/black_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5.4"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="Sunday"
                android:gravity="center"
                android:id="@+id/forecast_title_1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:id="@+id/forecast_summary_1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hi: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_hi_1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Lo: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_lo_1"
                />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/black_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5.4"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="Monday"
                android:gravity="center"
                android:id="@+id/forecast_title_2"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:id="@+id/forecast_summary_2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hi: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_hi_2"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Lo: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_lo_2"
                />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/black_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5.4"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="Tuesday"
                android:gravity="center"
                android:id="@+id/forecast_title_3"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:id="@+id/forecast_summary_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hi: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_hi_3"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Lo: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_lo_3"
                />

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/black_border"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="5.4"
            android:layout_height="match_parent"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:text="Wednesday"
                android:gravity="center"
                android:id="@+id/forecast_title_4"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.8"
                android:id="@+id/forecast_summary_4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Hi: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_hi_4"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Lo: 70"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/forecast_lo_4"
                />

        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>